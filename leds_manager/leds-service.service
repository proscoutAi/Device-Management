[Unit]
Description=ProScout LED Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/proscout/ProScout-master/device-manager
ExecStart=/bin/bash -c 'source ../ProScout-Device/bin/activate && python leds_manager/leds_service.py'
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
